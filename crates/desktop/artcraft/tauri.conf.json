{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ArtCraft",
  "version": "0.6.0",
  "identifier": "ai.artcraft.app",
  "build": {
    "frontendDist": "../../../frontend/apps/artcraft/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "nx run artcraft:dev",
    "beforeBuildCommand": "nx run artcraft:build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
    ],
    "security": {
      "csp": {
        "default-src": [
          "'self'",
          "'unsafe-eval'",
          "'unsafe-inline'",
          "blob:",
          "data:",
          "https://*.fakeyou.com",
          "https://*.storyteller.ai",
          "https://www.google-analytics.com",
          "https://www.googletagmanager.com",
          "ipc://localhost",
          "tauri://localhost"
        ],
        "connect-src": [
          "'self'",
          "'unsafe-eval'",
          "'unsafe-inline'",
          "blob:",
          "data:",
          "http://ipc.localhost",
          "https://*.fakeyou.com",
          "https://*.storyteller.ai",
          "https://*.clarity.ms",
          "https://unpkg.com/detect-gpu@5.0.70/",
          "https://www.google-analytics.com",
          "https://www.googletagmanager.com",
          "ipc://localhost",
          "tauri://localhost"
        ],
        "font-src": "*",
        "img-src": "* data: blob: 'unsafe-inline'",
        "script-src": [
          "'self'",
          "'unsafe-eval'",
          "'unsafe-inline'",
          "'wasm-unsafe-eval'",
          "asset:",
          "blob:",
          "data:",
          "tauri:",
          "https://*.clarity.ms",
          "https://*.fakeyou.com",
          "https://*.storyteller.ai",
          "https://*.unpkg.com",
          "https://clarity.ms",
          "https://unpkg.com",
          "ipc://localhost",
          "tauri://localhost"
        ],
        "style-src": [
          "'self'",
          "'unsafe-eval'",
          "'unsafe-inline'",
          "blob:",
          "data:",
          "https://*.fakeyou.com",
          "https://*.storyteller.ai",
          "https://fonts.googleapis.com",
          "ipc://localhost",
          "tauri://localhost"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
