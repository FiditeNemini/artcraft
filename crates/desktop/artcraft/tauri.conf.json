{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ArtCraft",
  "version": "0.0.1",
  "identifier": "ai.artcraft.app",
  "build": {
    "frontendDist": "../../../",
    "devUrl": "http://localhost:5741",
    "beforeDevCommand": "nx run editor2d:dev",
    "beforeBuildCommand": "nx run editor2d:build"
  },
  "app": {
    "windows": [
      {
        "title": "ArtCraft",
        "width": 2400,
        "height": 1300,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": [
          "'self'",
          "'unsafe-eval'",
          "'unsafe-inline'",
          "blob:",
          "data:",
          "https://*.fakeyou.com",
          "https://*.storyteller.ai",
          "ipc://localhost",
          "tauri://localhost"
        ], 
        "connect-src": [
          "'self'",
          "'unsafe-eval'",
          "'unsafe-inline'",
          "blob:",
          "data:",
          "https://*.fakeyou.com",
          "https://*.storyteller.ai",
          "https://unpkg.com/detect-gpu@5.0.70/",
          "ipc://localhost",
          "tauri://localhost"
        ],
        "font-src": "*",
        "img-src": "* data: blob: 'unsafe-inline'",
        "style-src": [
          "'self'",
          "'unsafe-eval'",
          "'unsafe-inline'",
          "blob:",
          "data:",
          "https://*.fakeyou.com",
          "https://*.storyteller.ai",
          "https://fonts.googleapis.com",
          "ipc://localhost",
          "tauri://localhost"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
