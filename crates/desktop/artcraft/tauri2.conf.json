{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ArtCraft",
  "version": "0.0.1",
  "identifier": "ai.artcraft.app",
  "build": {
    "frontendDist": "../../../frontend/apps/editor3d/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "echo",
    "beforeBuildCommand": "nx run editor2d:build"
  },
  "app": {
    "windows": [
      {
        "title": "ArtCraft",
        "width": 2400,
        "height": 1300,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
