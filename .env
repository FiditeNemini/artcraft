DATABASE_URL=mysql://root:root@localhost/storyteller

# SQLX normally requires a live database to reflect upon at build time.
# This setting turns that on and requires a `sql-data.json` cache file instead.
# See https://github.com/launchbadge/sqlx/tree/master/sqlx-cli#readme
#SQLX_OFFLINE=true

# We can't serve HTTPS locally without self-signed certificate nonsense.
COOKIE_SECURE=false
COOKIE_DOMAIN=.jungle.horse

# Bucket config (non-secret)
REGION_NAME=us-east1

TTS_DOWNLOAD_BUCKET_NAME=dev-vocodes-private-uploads
TTS_DOWNLOAD_BUCKET_ROOT=/user_uploaded_tts_models

W2L_DOWNLOAD_BUCKET_NAME=dev-vocodes-private-uploads
W2L_DOWNLOAD_BUCKET_ROOT=/user_uploaded_w2l_templates
